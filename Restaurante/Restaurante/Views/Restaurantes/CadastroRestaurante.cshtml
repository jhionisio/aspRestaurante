
@{
    ViewBag.Title = "CadastroRestaurante";
}

<div class="transparente">
    <h2>Cadastro de restaurante</h2>

    <fieldset>
        <legend>Dados</legend>
        <form method="post" action="CadastroRest">
            <label for="nomeRestaurante">Nome do restaurante:</label>
            <br />
            <input type="text" name="nomeRestaurante" class="maior" id="nomeRestaurante" required/>
            <br />
            <a href="@Url.Action("Index","Restaurantes")">
                <input type="button" value="Cancelar" class="btnVermelho btn" />
            </a>
            <input type="submit" value="Salvar" class="btnVerde btn" />
        </form>
    </fieldset>
</div>